<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Out"
        android:padding="20dp"
        android:textSize="20sp"
        android:id="@+id/ex_button"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:textColor="@color/background_dark"
        android:visibility="gone"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_power_settings_new_white_48px"
        android:background="@drawable/dark_circle"
        android:padding="3dp"
        android:id="@+id/btn_sign_out"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bem-vindo ao Flagger"
        android:textSize="30sp"
        android:id="@+id/title"
        android:layout_below="@+id/btn_sign_out"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white_1"
        android:padding="10dp"
        android:background="@drawable/text_box"
        android:layout_margin="20dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agora você está conectado(a) as pessoas que fazem a diferença no trânsito de POA."
        android:textSize="20sp"
        android:id="@+id/text1"
        android:gravity="center"
        android:padding="20dp"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textColor="@color/white_1"
        android:background="@drawable/text_box"
        android:layout_margin="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pode mexer em outros apps, lhe avisaremos quando puder dar ou receber a preferência em seu caminho. ;)"
        android:textSize="20sp"
        android:id="@+id/text2"
        android:gravity="center"
        android:padding="20dp"
        android:layout_below="@+id/text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textColor="@color/white_1"
        android:background="@drawable/text_box"
        android:layout_margin="20dp"/>

</RelativeLayout>